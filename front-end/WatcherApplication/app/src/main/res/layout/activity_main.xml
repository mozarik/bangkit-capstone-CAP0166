<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity"
    android:padding="16dp">
    
    <ImageView
        android:id="@+id/image_upload"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:src="@drawable/ic_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button_choose_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_upload"
        app:layout_constraintTop_toBottomOf="@id/image_upload"
        android:layout_marginTop="20dp"

        android:textStyle="bold"
        android:text="@string/button_choose_image"/>

    <Button
        android:id="@+id/button_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_choose_image"
        app:layout_constraintTop_toBottomOf="@id/image_upload"
        android:layout_marginTop="20dp"

        android:textStyle="bold"
        android:text="@string/button_upload"/>

<!--    <ProgressBar-->
<!--        android:id="@+id/progress_bar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->

<!--        style="@style/Widget.AppCompat.ProgressBar.Horizontal"-->
<!--        android:max="100"-->
<!--        android:progress="40"-->

<!--        app:layout_constraintTop_toBottomOf="@id/button_upload"-->
<!--        android:layout_marginTop="10dp"/>-->

    <Button
        android:id="@+id/button_check_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/button_check_result"

        app:layout_constraintTop_toBottomOf="@id/button_choose_image"

        android:layout_marginTop="10dp"/>

<!--    app:layout_constraintTop_toBottomOf="@id/progress_bar"-->

</androidx.constraintlayout.widget.ConstraintLayout>